<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_5sdp"
    android:padding="@dimen/_10sdp"
    android:layout_height="@dimen/_120sdp">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/img_item"
        android:contentDescription="@string/cart_item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_remove"
        android:layout_alignParentBottom="true"
        style="@style/SmallTextBold"
        android:gravity="center"
        android:text="@string/remove_cta"
        android:textColor="@color/blue"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/img_item"
        android:layout_toStartOf="@id/txt_remove"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_product_name"
            style="@style/SmallTextBold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_price"
            style="@style/SmallText"
            android:layout_marginTop="@dimen/_5sdp"/>
    </LinearLayout>

</RelativeLayout>